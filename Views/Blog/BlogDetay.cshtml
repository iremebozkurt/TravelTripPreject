</head>
<body>
    <div class="header">     
    </div>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var x in Model)
                {
                    <div class="single-grid">
                        <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />
                        <h2> @x.Baslik</h2>
                        <p>
                            @x.Aciklama
                        </p>
                    </div>
                }
                <div class="content-form">
                    <h3>Bir Yorum Bırak</h3>
                    <form>
                        <input type="text" placeholder="Kullanıcı Adı" name="Kullaniciadi" required />
                        <input type="text" placeholder="Mail Adresi" name="Mail" required />
                        <textarea placeholder="Yorum" name="Yorum"> </textarea>
                        <input type="submit" value="Gönder" />
                    </form>
                </div> 
            </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    @foreach (var x in Model)
                    {
                    <h4> <a href="/Blog/Index/@x.ID"> Önceki Sayfaya Git </a></h4>
                    }
                </div>
                    
                <div class="clearfix"></div>

                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div> 
    </body>
